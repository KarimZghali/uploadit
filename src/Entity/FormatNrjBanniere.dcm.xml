<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="FormatNrjBanniere" table="format_nrj_banniere">
    <id name="idFormatNrjBanniere" type="integer" column="id_format_nrj_banniere">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="weight" type="integer" column="weight" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">Poids maximum que peut avoir la bannière NRJ</option>
      </options>
    </field>
    <field name="height" type="integer" column="height" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">Hauteur que doit avoir la bannière NRJ</option>
      </options>
    </field>
    <field name="width" type="integer" column="width" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="comment">Largeur que doit avoir la bannière NRJ</option>
      </options>
    </field>
    <field name="gif" type="boolean" column="gif" nullable="false">
      <options>
        <option name="comment">Définit si le format GIF est accepté pour le format bannière NRJ</option>
      </options>
    </field>
    <field name="textZone" type="boolean" column="text_zone" nullable="false">
      <options>
        <option name="comment">Définit si une zone de texte est à respecter sur le format bannière NRJ</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
