<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Customer" table="customer">
    <id name="idCustomer" type="integer" column="id_customer">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="emailCustomer" type="string" column="email_customer" length="50" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="comment">Adresse email du client</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
